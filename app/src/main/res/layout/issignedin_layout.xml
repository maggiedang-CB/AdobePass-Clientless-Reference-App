<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/Separator"
        android:id="@+id/isSignedIn_header"
        android:layout_width="match_parent"
        android:text="@string/is_signed_in"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/paddingLR"
        android:paddingRight="@dimen/paddingLR"
        android:layout_below="@id/isSignedIn_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_text_size"
                android:text="rId:"/>

            <EditText
                android:id="@+id/isSignedIn_rId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter rId Value Here"
                android:text=""/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_isSignedIn_ok"
                    style="@style/ButtonStyle"
                    android:text="@string/ok"/>

                <Button
                    android:id="@+id/btn_isSignedIn_back"
                    style="@style/ButtonStyle"
                    android:text="@string/back"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
