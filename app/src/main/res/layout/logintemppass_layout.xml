<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/Separator"
        android:id="@+id/loginTempPass_header"
        android:layout_width="match_parent"
        android:text="@string/login_temp_pass"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/paddingLR"
        android:paddingRight="@dimen/paddingLR"
        android:layout_below="@id/loginTempPass_header">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_text_size"
                android:text="requestorId:"/>

            <EditText
                android:id="@+id/logintemppass_requestorId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Requestor Id Here"
                android:text=""/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_text_size"
                android:text="tempPassId:"/>

            <EditText
                android:id="@+id/logintemppass_tempPassId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="Enter Temp Pass Id Here"
                android:text=""/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_logintemppass_ok"
                    style="@style/ButtonStyle"
                    android:text="OK"/>

                <Button
                    android:id="@+id/btn_logintemppass_back"
                    style="@style/ButtonStyle"
                    android:text="BACK"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>